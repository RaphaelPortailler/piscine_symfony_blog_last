{% extends'base.html.twig' %}

{# ------------- TITRE ------------- #}

    {% block metatitle %}
        Blog : Tout les articles
    {% endblock %}

        {% block body %}

            <h1 id="h1Articles">Nos Articles :</h1>
                <section id="sectArticles">
                    {% for article in articles %}
                        {% if article.isPublished %}
                            <div class="divArticles">
                                <p><span class="spanArticles">Titre : </span>{{ article.title }}</p>
                                <p><span class="spanArticles">Description : </span>{{ article.description }}</p>
                                <div id="imgArticles">
                                    <img src="{{ article.image }}" alt="{{ article.title }}">
                                </div>
                                <br>
                                <a class="ancreCategory" href="{{ path('show_article', {id: article.id }) }}">Voir l'article</a>
                            </div>
                        {% endif %}
                    {%endfor %}
                </section>
        {% endblock %}