{% extends 'admin/base.html.twig' %}

    {% block title %}
        Admin : Les Articles
    {% endblock %}



{% block body %}

    <h1 id="h1Articles">Les articles : </h1>

    <section>


        <table>
            <tr>
                <td>Id</td>
                <td>Image</td>
                <td>Titre</td>
                <td>Date</td>
                <td>Catégorie</td>
                <td>Est publié ?</td>
                <td>Suppression</td>
            </tr>

            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>
                        <div id="divImgAdmin">
                            <img src="{{ article.image }}" alt="{{ article.title }}" />
                        </div>
                    </td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.createdAt | date('d-m-Y') }}</td>
                    <td>{{ article.category ? article.category.title : 'sans catégorie' }}</td>
                    <td>
                        {% if article.isPublished %}
                            <p>Oui</p>
                        {% else %}
                            <p>Non</p>
                        {% endif %}
                    </td>
                    <td><a class="black" href="{{ path('delete_articles', {id: article.id}) }}">Supprimez</a>
                    <a class="black" href="{{ path('admin_update_article', {id: article.id}) }}">Modifier</a></td>
                </tr>
            {% endfor %}
        </table>


    </section>

{% endblock %}