{% extends 'admin/base.html.twig' %}

{% block body %}

    <h1 id="h1Articles">Les articles : </h1>

    <section>


        <table>
            <tr>
                <td>Id</td>
                <td>Image</td>
                <td>Titre</td>
                <td>Date</td>
                <td>Est publi√© ?</td>
                <td>Suppression</td>
            </tr>



            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td><div id="divImgAdmin"><img src="{{ article.image }}" alt="{{ article.title }}" /></div></td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.createdAt | date('d-m-Y') }}</td>
                    <td>
                        {% if article.isPublished %}
                            <p>Oui</p>
                        {% else %}
                            <p>Non</p>
                        {% endif %}
                    </td>
                    <td><a class="black" href="{{ path('delete_articles', {id: article.id}) }}">Supprimez</a></td>
                </tr>
            {% endfor %}
        </table>


    </section>

{% endblock %}