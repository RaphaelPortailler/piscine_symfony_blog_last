{% extends 'admin/base.html.twig' %}

    {% block title %}
        Admin : Les Catégories
    {% endblock %}



{% block body %}

<h1 id="h1Articles">Les catégories : </h1>

<section>


    <table>
        <tr>
            <td>Id</td>
            <td>Titre</td>
            <td>Actions</td>

        </tr>

        {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.title }}</td>
            <td><a class="black" href="{{ path('delete_category', {id: category.id}) }}">Supprimez</a>
                <a class="black" href="{{ path('update_category', {id: category.id}) }}">Modifier</a></td>
        </tr>
        {% endfor %}
    </table>

</section>

{% endblock %}